# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# TOML - critical for @iarna/toml parser
[*.toml]
end_of_line = lf
indent_size = 2

# Markdown
[*.{md,mdx}]
trim_trailing_whitespace = false

# YAML
[*.{yaml,yml}]
indent_size = 2

# CSS / SCSS
[*.{css,scss,less}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Makefiles need tabs
[Makefile]
indent_style = tab

# Windows scripts - keep CRLF
[*.{bat,cmd,ps1}]
end_of_line = crlf
